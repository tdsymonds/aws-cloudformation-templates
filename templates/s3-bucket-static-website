{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Creates an S3 bucket configured for static website hosting.",
    "Parameters": {
        "IndexFileParameter": {
            "Type": "String",
            "Description": "The name of the index file in S3",
            "Default": "index.html"
        },
        "ErrorFileParameter": {
            "Type": "String",
            "Description": "The name of the error file in S3",
            "Default": "error.html"
        }
    },
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "WebsiteConfiguration": {
                    "IndexDocument": { "Ref": "IndexFileParameter" },
                    "ErrorDocument": { "Ref": "ErrorFileParameter" }
                },
                "AccessControl": "PublicRead"
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Value" : { "Ref": "S3Bucket" },
            "Description" : "The name of the S3 bucket"
        },
        "WebsiteURL" : {
            "Value" : { "Fn::GetAtt" : [ "S3Bucket", "WebsiteURL" ] },
            "Description" : "The URL for the static website"
       }
    }
}
